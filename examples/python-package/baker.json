{
    "create_tests": {
        "type": "bool",
        "help": "Should I generate tests.py file?",
        "default": true
    },
    "licence": {
        "type": "str",
        "choices": [
            "MIT",
            "Apache"
        ],
        "help": "What is your licence?"
    },
    "project_name": {
        "type": "str",
        "help": "What is your project name?"
    },
    "project_slug": {
        "type": "str",
        "help": "What is your project slug?",
        "default": "{{ project_name|lower|replace(' ', '_') }}"
    }
}